# Application
APP_NAME=DATAIKOŠ Backend
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production
FRONTEND_URL=https://dataikos.netlify.app

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin User
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password
ADMIN_EMAIL=admin@dataikos.com

# File Upload
MAX_FILE_SIZE_MB=5
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp
UPLOAD_DIR=./uploads

# Email Configuration
EMAIL_ENABLED=true
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@dataikos.com
EMAIL_FROM_NAME=DATAIKOŠ

# SMTP Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# SendGrid (optional alternative)
SENDGRID_API_KEY=

# Mailgun (optional alternative)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# Appointment Settings
MAX_APPOINTMENTS_PER_SLOT=5
APPOINTMENT_REMINDER_HOURS=24
WORKING_HOURS_START=09:00
WORKING_HOURS_END=18:00
APPOINTMENT_DURATION=60

# Scheduler Settings
SCHEDULER_ENABLED=true
SCHEDULER_CHECK_INTERVAL=60
